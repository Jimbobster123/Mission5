@{
    ViewData["Title"] = "Tutoring Calculator";
    var rate = (int)ViewData["Rate"];
}

<h1 class="display-6 fw-bold mb-3">Tutoring Cost Calculator</h1>
<p class="text-muted">Enter the hours you want, then calculate the total.</p>

<div class="row">
    <div class="col-md-6">

        <div class="mb-3">
            <label for="hoursInput" class="form-label">Hours needed</label>
            <input id="hoursInput" type="number" class="form-control" min="0" step="0.5" placeholder="e.g., 2" />
            <div id="hoursError" class="text-danger mt-1" style="display:none;">
                Please enter a positive number of hours.
            </div>
        </div>

        <div class="mb-3">
            <label for="rateInput" class="form-label">Rate per hour</label>
            <input id="rateInput" type="text" class="form-control" value="$@rate" readonly />
        </div>

        <button id="calcBtn" class="btn btn-success">Calculate Total</button>

        <div class="mt-3">
            <label for="totalOutput" class="form-label">Total</label>
            <input id="totalOutput" type="text" class="form-control" readonly />
        </div>

        <a class="btn btn-link mt-3 p-0" asp-controller="Home" asp-action="Index">
            ‚Üê Back to Home
        </a>

    </div>
</div>

@section Scripts {
    <script>
        const hourlyRate = @rate;
    </script>
    <script src="~/js/calculator.js" asp-append-version="true"></script>
}